<Page x:Class="attainment.Views.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:attainment.Controls"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Products">

    <Grid>
        <!-- Products List View -->
        <Grid x:Name="ProductsListView">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header: Resource selector + SearchBar -->
            <Grid Grid.Row="0" Margin="25,20,25,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Resource selector (loaded on first navigation) -->
                <ComboBox x:Name="ResourcesComboBox"
                          Grid.Column="0"
                          MinWidth="240"
                          DisplayMemberPath="Title"
                          SelectedValuePath="Id"
                          SelectionChanged="ResourcesComboBox_SelectionChanged"
                          VerticalAlignment="Center"/>

                <!-- Search bar (reused) -->
                <controls:SearchBar Grid.Column="2"
                                    x:Name="ProductSearchBar"
                                    Margin="0,0,0,0"
                                    SearchTextChanged="ProductSearchBar_SearchTextChanged"
                                    SearchSubmitted="ProductSearchBar_SearchSubmitted"/>
            </Grid>

            <!-- Products list -->
            <ScrollViewer Grid.Row="1"
                          Margin="25,5,25,5"
                          Style="{StaticResource ModernScrollViewer}"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly">
                <ItemsControl x:Name="ProductsItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="0,0,15,15"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="12" Width="300">
                                <StackPanel>
                                    <!-- Header row: Name -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" VerticalAlignment="Center"/>
                                        <!-- Type badge on the right -->
                                        <Border Grid.Column="1" Background="#f0f4ff" CornerRadius="3" Padding="6,2" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Type}" Foreground="#5e72e4" FontSize="12"/>
                                        </Border>
                                    </Grid>

                                    <TextBlock Text="{Binding Content}" Foreground="#666666" TextWrapping="Wrap" Margin="0,4,0,0"/>

                                    <!-- Resource badge -->
                                    <Border Background="#f0f4ff" CornerRadius="3" Padding="6,2" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Resource.Title}" Foreground="#5e72e4" FontSize="12"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Add New Product Button -->
            <Button Grid.Row="2"
                    Content="Add New Product"
                    HorizontalAlignment="Right"
                    Margin="0,15,25,25"
                    Style="{StaticResource PrimaryActionButton}"
                    Click="AddProductButton_Click"/>
        </Grid>

        <!-- Create Product View -->
        <Grid x:Name="CreateProductView" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Create New Product"
                       FontFamily="{StaticResource ModernFont}"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#525f7f"
                       Margin="25,30,25,20"/>

            <!-- Form Fields (scrollable) -->
            <ScrollViewer Grid.Row="1"
                          Margin="25,10,25,10"
                          Style="{StaticResource ModernScrollViewer}"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly">
                <StackPanel>
                <!-- Product Name -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Product Name"
                               FontFamily="{StaticResource ModernFont}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#525f7f"
                               Margin="0,0,0,10"/>
                    <TextBox x:Name="CreateNameTextBox"
                             Style="{StaticResource ModernTextBox}"
                             MaxLength="100"/>
                </StackPanel>

                <!-- Resource Selector -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Resource"
                               FontFamily="{StaticResource ModernFont}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#525f7f"
                               Margin="0,0,0,10"/>
                    <ComboBox x:Name="CreateResourcesComboBox"
                              MinWidth="240"
                              DisplayMemberPath="Title"
                              SelectedValuePath="Id"/>
                </StackPanel>

                <!-- Product Type -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Type"
                               FontFamily="{StaticResource ModernFont}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#525f7f"
                               Margin="0,0,0,10"/>
                    <ComboBox x:Name="CreateTypeComboBox" MinWidth="240"/>
                </StackPanel>

                <!-- Content Text -->
                <StackPanel>
                    <TextBlock Text="Content"
                               FontFamily="{StaticResource ModernFont}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#525f7f"
                               Margin="0,0,0,10"/>
                    <TextBox x:Name="CreateContentTextBox"
                             Style="{StaticResource ModernTextBox}"
                             AcceptsReturn="True"
                             TextWrapping="NoWrap"
                             MinHeight="120"
                             MaxHeight="400"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"/>
                </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="25,15,25,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Margin="0,0,15,0"
                        Padding="30,10"
                        Style="{StaticResource GradientButton}"
                        Click="CreateCancelButton_Click"/>

                <!-- Save Button -->
                <Button Grid.Column="2"
                        Content="Save"
                        Padding="30,10"
                        Style="{StaticResource PrimaryActionButton}"
                        Click="CreateSaveButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
