<Page x:Class="attainment.Views.SubjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:attainment.Controls"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Subjects">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Search Bar -->
        <Grid Grid.Row="0" Margin="25,20,25,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <TextBox x:Name="SearchBox" 
                         Padding="10,8"
                         FontSize="14"
                         FontFamily="{StaticResource ModernFont}"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchBox_TextChanged"/>
                         
                <TextBlock IsHitTestVisible="False" 
                           Text="Search subjects..." 
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           FontFamily="{StaticResource ModernFont}"
                           Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            
            <Button Grid.Column="1" 
                    Content="Search"
                    Style="{StaticResource GradientButton}"
                    Click="SearchButton_Click"/>
        </Grid>
        
        <!-- Scrollable Subjects Area -->
        <ScrollViewer Grid.Row="1" Margin="25,5,25,5" Style="{StaticResource ModernScrollViewer}">
            <ItemsControl x:Name="SubjectsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:SubjectCard 
                            Subject="{Binding}"
                            Margin="0,0,15,15"
                            Width="200"
                            Height="120"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Add New Subject Button -->
        <Button Grid.Row="2"
                Content="Add New Subject"
                HorizontalAlignment="Right"
                Margin="0,15,25,25"
                Style="{StaticResource PrimaryActionButton}"
                Click="AddSubjectButton_Click"/>
    </Grid>
</Page>
