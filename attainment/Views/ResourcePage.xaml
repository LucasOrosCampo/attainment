<Page x:Class="attainment.Views.ResourcePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:attainment.Controls"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Resources">

    <Grid>
        <!-- Resources List View -->
        <Grid x:Name="ResourcesListView">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header: Subject selector + SearchBar -->
            <Grid Grid.Row="0" Margin="25,20,25,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Subject selector (loaded on first navigation) -->
                <ComboBox x:Name="SubjectsComboBox"
                          Grid.Column="0"
                          MinWidth="240"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectionChanged="SubjectsComboBox_SelectionChanged"
                          VerticalAlignment="Center"/>

                <!-- Search bar (reused) -->
                <controls:SearchBar Grid.Column="2"
                                    x:Name="ResourceSearchBar"
                                    Margin="0,0,0,0"
                                    SearchTextChanged="ResourceSearchBar_SearchTextChanged"
                                    SearchSubmitted="ResourceSearchBar_SearchSubmitted"/>
            </Grid>

            <!-- Resources list -->
            <ScrollViewer Grid.Row="1"
                          Margin="25,5,25,5"
                          Style="{StaticResource ModernScrollViewer}"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly">
                <ItemsControl x:Name="ResourcesItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="0,0,15,15"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="12" Width="300">
                                <StackPanel>
                                    <!-- Header row: Title + file icon/button on the right -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" VerticalAlignment="Center"/>
                                        <!-- File icon button (visible only when FilePath set) -->
                                        <Button Grid.Column="1"
                                                Margin="8,0,0,0"
                                                Padding="8,2"
                                                MinWidth="0"
                                                ToolTip="{Binding FilePath}"
                                                Visibility="{Binding FilePath, Converter={StaticResource FilePathToVisibilityConverter}}"
                                                Background="{Binding FilePath, Converter={StaticResource FilePathToBrushConverter}}"
                                                Foreground="White"
                                                Cursor="Hand"
                                                Tag="{Binding FilePath}"
                                                Click="FileIconButton_Click">
                                            <TextBlock Text="{Binding FilePath, Converter={StaticResource FilePathToExtensionLabelConverter}}"
                                                       FontWeight="SemiBold"/>
                                        </Button>
                                    </Grid>

                                    <TextBlock Text="{Binding Description}" Foreground="#666666" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                        <TextBlock Text="{Binding Url}" Foreground="#007acc" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <!-- Subject badge -->
                                    <Border Background="#f0f4ff" CornerRadius="3" Padding="6,2" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Subject.Name}" Foreground="#5e72e4" FontSize="12"/>
                                    </Border>
                                    <!-- Create Exam Button -->
                                    <Button Content="Create Exam"
                                            Margin="0,10,0,0"
                                            Style="{StaticResource PrimaryActionButton}"
                                            Tag="{Binding}"
                                            Click="CreateExamButton_Click"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Add New Resource Button -->
            <Button Grid.Row="2"
                    Content="Add New Resource"
                    HorizontalAlignment="Right"
                    Margin="0,15,25,25"
                    Style="{StaticResource PrimaryActionButton}"
                    Click="AddResourceButton_Click"/>
        </Grid>

        <!-- Create Resource View -->
        <Grid x:Name="CreateResourceView" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Create New Resource"
                       FontFamily="{StaticResource ModernFont}"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#525f7f"
                       Margin="25,30,25,20"/>

            <!-- Form Fields -->
            <StackPanel Grid.Row="1" Margin="25,10,25,10">
                <!-- Resource Title -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Resource Title"
                               FontFamily="{StaticResource ModernFont}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#525f7f"
                               Margin="0,0,0,10"/>
                    <TextBox x:Name="CreateTitleTextBox"
                             Style="{StaticResource ModernTextBox}"
                             MaxLength="100"/>
                </StackPanel>

                <!-- Subject Selector -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Subject"
                               FontFamily="{StaticResource ModernFont}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#525f7f"
                               Margin="0,0,0,10"/>
                    <ComboBox x:Name="CreateSubjectsComboBox"
                              MinWidth="240"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"/>
                </StackPanel>

                <!-- File Picker -->
                <StackPanel>
                    <TextBlock Text="Attach File (PDF or PPT/PPTX)"
                               FontFamily="{StaticResource ModernFont}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#525f7f"
                               Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="CreateFileTextBox"
                                 Grid.Column="0"
                                 Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True"/>
                        <Button Grid.Column="1"
                                Content="Browse"
                                Margin="10,0,0,0"
                                Style="{StaticResource GradientButton}"
                                Click="BrowseFileButton_Click"/>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="25,15,25,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Margin="0,0,15,0"
                        Padding="30,10"
                        Style="{StaticResource GradientButton}"
                        Click="CreateCancelButton_Click"/>

                <!-- Save Button -->
                <Button Grid.Column="2"
                        Content="Save"
                        Padding="30,10"
                        Style="{StaticResource PrimaryActionButton}"
                        Click="CreateSaveButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
